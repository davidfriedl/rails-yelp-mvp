<div class="container">
  <h1 style="border-bottom: 0.2px solid grey">Write a review</h1>
  <br>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.label :content %>
    <%= f.input :content, label:false, placeholder: "write a review ...", input_html: {style: 'width: 400px'} %>
    <%= f.label :rating %>
    <%= f.input :rating, label:false, placeholder: "rate the restaurant", input_html: {style: 'width: 400px'} %>
  <br>
  <br>
    <%= f.submit "submit review", class: "btn btn-primary" %>
  <% end %>
</div>
